{
    "extends": "google",

    "env": { "es6": true },

    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },

    "rules": {
        "no-var": 0,
        "one-var": 0,
        "spaced-comment": 0,
        "comma-spacing": 0,
        "array-bracket-spacing": 0,
        "key-spacing": 0,
        "keyword-spacing": 0,
        "semi-spacing": 0,
        "brace-style": 0,
        "comma-style": 0,
        "comma-dangle": 0,
        "new-cap": 0,
        "max-len": 0,
        "no-multiple-empty-lines": 0,
        "indent": 0,
        "no-multi-spaces": 0,
        "padded-blocks": 0,
        "space-before-blocks": 0,
        "prefer-spread": 0,
        "no-multi-str": 0,
        "arrow-parens": 0,
        "no-invalid-this": 0,
        "require-jsdoc": [2, {
            "require": {
                "FunctionDeclaration": false,
                "MethodDefinition": false,
                "ClassDeclaration": false,
                "ArrowFunctionExpression": false,
                "FunctionExpression": false
            }
        }]
    }
}